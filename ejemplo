class ItemBiblioteca:
 def __init__(self, titulo, autor):
        self._titulo = titulo
        self._autor = autor
        self._disponible = True
        self._prestado = None

def obtener_info(self):
        pass

def prestar(self, usuario):
        if self._disponible:
            self._disponible = False
            self._prestado = usuario
            return f"{self._titulo} prestar."
        return f"{self._titulo} no prestar."

def devolver(self):
        if not self._disponible:
            self._disponible = True
            self._prestado = None
            return f"{self._titulo} ha sido devuelto."
        return f"{self._titulo} ya est치 disponible."
    
class Libro(ItemBiblioteca):
    def __init__(self, titulo, autor, paginas):
        super().__init__(titulo, autor)
        self._paginas = paginas

    def obtener_info(self):
            return f"Libro: {self._titulo}, Autor: {self._autor}, P치ginas: {self._paginas}, Disponible: {self._disponible}"


class Revista(ItemBiblioteca):
    def __init__(self, titulo, autor, edicion):
        super().__init__(titulo, autor)
        self._numero_edicion = edicion

    def obtener_info(self):
        return f"Revista: {self._titulo}, Autor: {self._autor}, Edici칩n: {self._numero_edicion}, Disponible: {self._disponible}"


class Biblioteca:
    def __init__(self, nombre):
        self._nombre = nombre
        self._items = []

    def agregar_item(self, item):
        self._items.append(item)
        return f"{item._titulo} agregado a la biblioteca."

    def mostrar_items(self):
        return "\n".join([item.obtener_info() for item in self._items])


def main():
    biblioteca = Biblioteca("Biblioteca Central")

    libro1 = Libro("Cien a침os de soledad", "Gabriel Garcia Marquez", 417)
    libro2 = Libro("1984", "George Orwell", 328)
    revista1 = Revista("National Geographic", "Varios", 202)

    print(biblioteca.agregar_item(libro1))
    print(biblioteca.agregar_item(libro2))
    print(biblioteca.agregar_item(revista1))

    print("\nInventario de la biblioteca:")
    print(biblioteca.mostrar_items())

    print("\n" + libro1._disponible())
    print(libro1.obtener_info())
    print(libro1._prestado())
    print(libro1.obtener_info())


if __name__ == "__main__":
    main()
